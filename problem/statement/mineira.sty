				\hline
				\begin{minipage}[t]{0.55\textwidth}
					\vspace{0.01cm}
					\insereTexto{#1}
					\vspace{0.28cm}
				\end{minipage}
				\\
				\hline
			\end{tabular}
		}{
			\vspace{-0.3cm}
			\hfill
			\begin{tabular}{|l|}
				\hline
				\begin{minipage}[t]{0.55\textwidth}
					\vspace{0.01cm}
					\insereTexto{#1}
					\vspace{0.28cm}
				\end{minipage}
				\\
				\hline
			\end{tabular}
		}

	}
} % interaction

